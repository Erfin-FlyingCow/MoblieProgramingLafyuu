<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/explore"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Explore">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:orientation="horizontal"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputSearchLayout"
                android:layout_width="270dp"
                android:layout_height="60dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopStart="5dp"
                app:boxStrokeColor="#EBF0FF"
                app:boxStrokeWidth="1dp"
                app:startIconContentDescription="Search Icon"
                app:startIconDrawable="@drawable/search"
                app:startIconTint="#40BFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search Product"
                    android:inputType="text"
                    android:textSize="12sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/bfavorite"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/favorite" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="71dp">


                <ImageView
                    android:id="@+id/notif"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/notif"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/redot"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/notif"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:tint="#FB7181" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Man Fashion"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="5dp"
            android:columnCount="4">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/mainshirt" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/manbag" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/mantshirt" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/manshoes" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/manpants" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/manunderweaar" />


        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Woman Fashion"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="5dp"
            android:columnCount="4">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/drees" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/womantshirt" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/womanpants" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/skirt" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/womanbag" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/highheels" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/bikini" />
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/home"
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:padding="5dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/explore"
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:padding="5dp"
            android:src="@drawable/explore" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:padding="5dp"
            android:src="@drawable/cart" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:padding="5dp"
            android:src="@drawable/offer" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:padding="5dp"
            android:src="@drawable/account" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>